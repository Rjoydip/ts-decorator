{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": [
    "./example/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ]
} 